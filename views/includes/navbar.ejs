   /* Basic styles for the navbar */
.navbar {
  padding: 10px 20px;
  background-color: #ffffff;
  border-bottom: 1px solid #e7e7e7;
}

.navbar-brand {
  font-size: 24px;
  font-weight: bold;
  color: #ff385c;
}

.nav-link {
  color: #333333;
  font-size: 16px;
  padding: 10px 15px;
  text-align: center;
}

.nav-link:hover {
  color: #ff385c;
  text-decoration: none;
}

/* Search bar styles */
.search-inp {
  width: 250px;
  border-radius: 20px;
  border: 1px solid #e7e7e7;
  padding: 5px 15px;
}

.search-btn {
  background-color: #ff385c;
  color: #ffffff;
  border-radius: 20px;
  border: none;
  padding: 5px 15px;
}

.search-btn:hover {
  background-color: #e12b4b;
}

/* Background for the collapse section of the navbar */
.navbar .collapse {
  background-color: #f8f9fa; /* Light grey background color */
  padding: 10px 20px; /* Padding for better spacing */
  border-radius: 5px; /* Optional: rounding the corners */
}

.navbar .nav-link {
  color: #333333;
  font-size: 16px;
  padding: 10px 15px;
  text-align: center;
  border-radius: 5px; /* Optional: rounding the corners */
}

.navbar .nav-link:hover {
  background-color: #e9ecef; /* Slightly darker background on hover */
  color: #ff385c;
  text-decoration: none;
}




/* Responsive styles */
@media (max-width: 768px) {
  .search-inp {
    width: 100%;
    margin-bottom: 10px;
  }

  .navbar .collapse {
    background-color: #ffffff; /* Change background color on smaller screens if needed */
  }


  .navbar-nav.ms-auto {
    flex-direction: column;
    align-items: center;
  }

  .nav-link {
    padding: 8px 0;
  }

  .navbar-nav.ms-auto {
    margin-top: 15px;
  }

  .search-btn {
    width: 100%;
    margin-top: 5px;
  }
}

@media (max-width: 576px) {
  .navbar {
    padding: 10px;
  }

  .navbar-brand {
    font-size: 20px;
  }

  .nav-link {
    font-size: 14px;
  }

  .navbar-nav.ms-auto {
    width: 100%;
  }
}

